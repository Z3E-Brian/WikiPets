input UserInput {
    id: ID
    name: String!
    email: String!
}

type Query {
    getUsers(page: Int!, size: Int!): UserResponse
    getAllUsers: [UserDto]
    getUserById(id: ID!): UserDto
}

type Mutation {
    createUser(name: String!, email: String!): UserDto
    deleteUser(id: ID!): Boolean
    updateUser (input:UserInput): UserDto
}

type UserDto {
    id: ID
    name: String
    email: String
}

type UserResponse {
    users: [UserDto]
    totalPages: Int
    totalElements: Int
}



